<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorWhite"
    android:padding="10dp">

    <TextView android:id="@+id/txt_foodorder_name"
              android:layout_width="0dp"
              android:layout_weight="2"
              android:textSize="20sp"
              android:gravity="center"
              android:textColor="@color/colorAccent"
              android:background="@drawable/textview_background"
              android:layout_height="40dp" />

    <TextView android:id="@+id/txt_foodorder_price"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:textSize="20sp"
              android:gravity="center"
              android:textColor="@color/colorAccent"
              android:background="@drawable/textview_background"
              android:layout_height="40dp"
              android:layout_marginLeft="10dp"/>

    <TextView android:id="@+id/txt_foodorder_nums"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:textSize="20sp"
              android:gravity="center"
              android:textColor="@color/colorAccent"
              android:background="@drawable/textview_background"
              android:layout_height="40dp"
              android:layout_marginLeft="10dp"/>

    <TextView android:id="@+id/txt_foodorder_comments"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:text="备注"
              android:textSize="20sp"
              android:gravity="center"
              android:textColor="@color/colorAccent"
              android:background="@drawable/textview_background"
              android:layout_height="40dp"
              android:layout_marginLeft="10dp"/>

    <Button android:id="@+id/btn_foodorder_unorder"
            android:layout_width="0dp"
            android:textSize="24sp"
            android:text="退点"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"/>

</LinearLayout>